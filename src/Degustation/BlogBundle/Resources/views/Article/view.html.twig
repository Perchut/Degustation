{% extends "DegustationBlogBundle::layout.html.twig" %}

{% block title %}
  {{ article.title }} - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

  <h1>Affichage de l'annonce n°{{ article.id }} !</h1>

  <div>
    {# On affiche tous les messages flash dont le nom est « info » #}
    {% for message in app.session.flashbag.get('info') %}
      <p>Message flash : {{ message }}</p>
    {% endfor %}
  </div>

  <p>
    Ici nous pourrons lire l'annonce ayant comme titre : {{ article.title }}<br />
    {{ article.content }}
  </p>

{% endblock %}